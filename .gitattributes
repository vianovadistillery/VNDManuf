# Auto-detect text files and normalize to LF
* text=auto eol=lf

# Explicit line ending normalization for known text types
*.py     text eol=lf
*.pyi    text eol=lf
*.md     text eol=lf
*.txt    text eol=lf
*.yaml   text eol=lf
*.yml    text eol=lf
*.json   text eol=lf
*.toml   text eol=lf
*.ini    text eol=lf
*.sh     text eol=lf
*.ps1    text eol=lf
*.sql    text eol=lf
*.csv    text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.js     text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.jsx    text eol=lf

# Binary / non-text files (never alter)
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.mov    binary
*.mp4    binary
*.mp3    binary
*.flv    binary
*.fla    binary
*.swf    binary
*.gz     binary
*.zip    binary
*.7z     binary
*.ttf    binary
*.eot    binary
*.woff   binary
*.woff2  binary
*.pyc    binary
*.db     binary
*.sqlite binary
*.sqlite3 binary
*.so     binary
*.exe    binary
